<% layout('layouts/boilerplate')%>
    <h1>All Workspots</h1>
    <div>
        <a href="/workspots/new">Add A Workspot</a>
    </div>
        <% for (let workspot of allWorkspots) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%=workspot.image%>" alt="" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= workspot.title%></h5>
                            <p class="card-text"><%= workspot.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%=workspot.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/workspots/<%=workspot._id%>">View <%= workspot.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% }%>
    
