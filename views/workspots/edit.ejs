<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Workspot</h1>
        <div class="col-6 offset-3">
            <form action="/workspots/<%=workspot._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="workspot[title]" id="title" value="<%= workspot.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="workspot[location]" id="location" value="<%= workspot.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="workspot[image]" id="image" value="<%= workspot.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">One cup of coffee is:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" class="form-control" name="workspot[price]" id="price" aria-label="price" aria-describedby="price-label" value="<%= workspot.price %>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="workspot[description]" id="description" ><%= workspot.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Workspot</button>
                </div>
            </form>
            <a href="/workspots/<%= workspot._id%>">Back To Workspot</a>
     
        </div>
